rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /questionTemplates/{templateId} {
      // Allow any authenticated user to read templates
      allow read: if request.auth != null;
      // UPDATED: Allow any authenticated user to CREATE/WRITE templates.
      // This is needed for the one-time seeding script to work.
      allow write: if request.auth != null; 
      
      match /sections/{sectionId} {
        allow read, write: if request.auth != null;

        match /questions/{questionId} {
          allow read, write: if request.auth != null;
        }
      }
    }
    
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      match /sections/{sectionId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /questionnaire/{questionId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /applicants/{applicantId} {
        allow create: if true;
        allow read: if request.auth.uid == userId;
      }
    }
  }
}

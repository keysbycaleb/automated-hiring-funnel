rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match any document in the 'users' collection
    match /users/{userId}/{document=**} {
      // Allow read/write access only if the requesting user's ID
      // matches the userId in the document path.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read access for a specific user's questionnaire for the applicant form
    // Note: This part requires careful implementation on the front end.
    // For now, we'll focus on the builder.
  }
}

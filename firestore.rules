rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users (Admins)
    // Only the logged-in user can see their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Config ("Product Manager")
    // Anyone (even the public client link) can read the config.
    // Only an admin (logged-in user) can write to the config.
    match /config/main {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Quotes ("Locked" Variables)
    // Anyone (for the public client link) can read a specific quote.
    // Only an admin (logged-in user) can create, update, or list all quotes.
    match /quotes/{quoteId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /quotes {
    	allow list: if request.auth != null;
    }
    
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow admins (any logged-in user) to read, write, and delete any files.
    match /{allPaths=**} {
      allow read, write, delete: if request.auth != null;
    }
    
    // This rule is for our 'generateQuotePDF' function.
    // It allows the public to *read* files inside the 'quotes/' folder.
    // This lets a client download their PDF without being logged in.
    match /quotes/{allPaths=**} {
      allow read: if true;
    }
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to upload a resume to the 'resumes' folder.
    // We are matching on the full path to be secure.
    match /resumes/{userId}/{fileName} {
      allow write: if true;
    }
    
    // Allow authenticated users to read resumes from their own folder.
    // This allows you (the hiring manager) to view the resumes.
    match /resumes/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Explicitly match the path for user logos
    match /users/{userId}/logos/{fileName} {
      // A user can read and write their own logo files.
      // - 'write' covers create, update, and delete operations.
      // - 'read' covers the get operation.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
